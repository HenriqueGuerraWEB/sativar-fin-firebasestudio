
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to all documents for any authenticated user.
    // This is a common starting point for apps where all users are trusted.
    // For more granular control, you can define rules for specific collections.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
